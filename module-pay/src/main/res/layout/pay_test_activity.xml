<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.PayTestActivity">

    <Button
        android:id="@+id/btnWxPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试微信支付"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintBottom_toTopOf="@+id/btnAliPay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAliPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试支付宝支付"
        app:layout_constraintBottom_toBottomOf="@+id/btnWxPay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWxPay" />

</androidx.constraintlayout.widget.ConstraintLayout>